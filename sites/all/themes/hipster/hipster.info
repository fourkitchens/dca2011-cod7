; The name, description and screenshot used for this theme on the Appearance page
screenshot  = screenshot.png
name        = Hipster
description = Theme developed for the DrupalCamp Austin 2011

; This theme is compatible with Drupal 7 core.
core = 7.x

; Overrides
stylesheets[all][]        = system.menus.css

; CSS declarations
stylesheets[all][]        = css/styles.css
stylesheets[all][]        = css/responsive.css
stylesheets[print][]      = css/print.css

; IE only
;stylesheets-conditional[IE][all][]       = css/ie.css

; Optionally add some JavaScripts to your theme.
;scripts[] = js/plugins.js
scripts[] = js/script.js

; regions in page.tpl.php template.
regions[help]           = Help
regions[sidebar_first]  = First sidebar
regions[sidebar_second] = Second sidebar
regions[navigation]     = Navigation bar
regions[highlighted]    = Highlighted
regions[content]        = Content
regions[header]         = Header
regions[footer]         = Footer
regions[bottom]         = Page bottom
regions[top]            = Page top

; Active Features
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; Set the default values of settings on the theme-settings.php form.

settings[hipster_breadcrumb]           = yes
settings[hipster_breadcrumb_separator] = ' Ý '
settings[hipster_breadcrumb_home]      = 1
settings[hipster_breadcrumb_trailing]  = 1
settings[hipster_breadcrumb_title]     = 0
settings[hipster_jump_link_target]     = main-menu
settings[hipster_rebuild_registry]     = 1
settings[hipster_wireframes]           = 0

; To make this sub-theme an admin theme with shortcut links next to titles,
; uncomment the line below.

;settings[shortcut_module_link]    = 1
